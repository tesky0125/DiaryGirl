<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    style="@style/bg_body_style"
    android:layout_height="fill_parent" android:orientation="horizontal">
    <ImageButton 
    	android:layout_height="wrap_content" android:background="@drawable/start" android:layout_width="wrap_content" android:id="@+id/btnstart"></ImageButton>
    <ImageButton  
    	android:layout_height="wrap_content" android:background="@drawable/pause" android:layout_width="wrap_content" android:id="@+id/btnpause"></ImageButton>
    <ImageButton 
    	android:layout_height="wrap_content" android:background="@drawable/stop" android:layout_width="wrap_content" android:id="@+id/btnstop"></ImageButton>

</LinearLayout>
