<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!--  -->
	<style name="tab_bottom">
        <item name="android:textSize">@dimen/tab_font_size</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/radio_btn_bg</item>
        <item name="android:paddingTop">@dimen/tab_padding_up</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35px</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/tab_padding_drawable</item>
        <item name="android:layout_weight">1.0</item>
	</style>
	
	<!-- 下面两个style分别用来设置list item的上行和下行文字风格 -->
	<style name="list_item_top_style">

		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/fontcolor</item>
	</style>
	
	<style name="list_item_bottom_style">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">italic</item>
		<item name="android:textColor">@color/fontcolor</item>
	</style>
	
	<!-- 下面三个style分别用来设置日记显示界面的标题、内容和时间文字风格 -->
	<style name="title_style">

		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/fontcolor</item>
	</style>
	
	<style name="content_style">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/fontcolor</item>
	</style>
	
	<style name="time_style">
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">italic</item>		
		<item name="android:textColor">@color/fontcolor</item>
	</style>
	
	<!--  -->	
	<style name="bg_body_style">
		<item name="android:background">@drawable/bg_body</item>
	</style>
	<!-- bg_body -->
	
	<!--  -->
	<style name="list_item_background">
		<item name="android:cacheColorHint">@color/transparent</item>
 		<item name="android:divider">@drawable/list_divider</item> 
<!--  		<item name="android:divider">#FFFFFF</item> -->
    	<item name="android:dividerHeight">1px</item> 
    	<item name="android:scrollingCache">false</item>
    	<item name="android:listSelector">@drawable/list_item_bg</item>
<!--     <item name="android:fadingEdge">none</item> 
			设置这项后,好像无法实现‘鼠标’滚动了！-->
	</style>
	<!-- bg_divider  list_item_bg -->
	
	
</resources>